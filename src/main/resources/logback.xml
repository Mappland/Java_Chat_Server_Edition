<configuration>

    <!-- Define the appender with color coding -->
    <appender name="COLORSTDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- Customize the log format and colors as needed -->
            <pattern>%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) - %cyan(%logger{15}) - %msg%n%nopex</pattern>
        </encoder>
    </appender>

    <!-- Root logger with color coded output -->
    <root level="info">
        <appender-ref ref="COLORSTDOUT" />
    </root>

</configuration>
